{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "module": "ESNext",
    "target": "ESNext",
    "typeRoots": [
      "types"
    ],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "strict": true
  }
}
